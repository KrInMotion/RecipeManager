@model RecipeFormVM
@{
    ViewBag.Title = "Новый рецепт";
}
<div class="container">
    <div class="panel panel-green margin-bottom-40">
        <div class="panel-heading">
            <h3 class="panel-title">
                <i class="fa fa-tasks"></i> Новый рецепт
            </h3>
        </div>
        <div class="panel-body">
            <form asp-controller="Recipe" asp-action="Create" method="post" role="form" class="form-horizontal">
                <fieldset>
                    <div asp-validation-summary="ValidationSummary.ModelOnly"></div>
                    <div class="form-group">
                        <label asp-for="Title" class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryId" class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control input-sshort"></select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="CoockTime" class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="CoockTime" class="form-control input-xshort" />
                            <span asp-validation-for="CoockTime" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Portions" class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Portions" class="form-control input-xshort" min="1" max="100" />
                            <span asp-validation-for="Portions" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Content" class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <textarea asp-for="Content" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default">Создать</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/js/validation.js"></script>
}