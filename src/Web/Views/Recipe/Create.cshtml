@model RecipeFormVM
@{
    ViewBag.Title = "Новый рецепт";
}
<div class="container">
    <div class="panel panel-green margin-bottom-40">
        <div class="panel-heading">
            <h3 class="panel-title">
                <i class="fa fa-tasks"></i> Новый рецепт
            </h3>
        </div>
        <div class="panel-body">
            <form asp-controller="Recipe" asp-action="Create" method="post" role="form">
                <fieldset>
                    <legend>Новый рецепт</legend>
                    <div asp-validation-summary="ValidationSummary.ModelOnly"></div>
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CoockTime"></label>
                        <input asp-for="CoockTime" class="form-control" />
                        <span asp-validation-for="CoockTime"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Content"></label>
                        <textarea asp-for="Content" class="form-control"></textarea>
                        <span asp-validation-for="Content"></span>
                    </div>
                    <button type="submit" class="btn btn-default">Создать</button>
                </fieldset>
            </form>
        </div>
    </div>
</div>